# ============================================
# MICROSERVICES PHOTO GALLERY - ENV TEMPLATE  
# ============================================
# Copia questo file come .env e personalizza i valori

# Ambiente
NODE_ENV=development
LOG_LEVEL=info

# Porte servizi (4 microservices)
GATEWAY_PORT=3000
USER_SERVICE_PORT=3002
ALBUM_SERVICE_PORT=3003
IMAGE_SERVICE_PORT=3004

# URLs interni (comunicazione tra servizi)
USER_SERVICE_URL=http://localhost:3002
ALBUM_SERVICE_URL=http://localhost:3003
IMAGE_SERVICE_URL=http://localhost:3004

# URL pubblico (esposto dal gateway)
API_BASE_URL=http://localhost:3000

# Storage dati
DATA_DIR=./data

# CORS per sviluppo frontend
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# Sicurezza (per futuro con JWT)
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Rate Limiting  
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Performance
HTTP_TIMEOUT=5000
CACHE_TTL=300

# Debug e Logging
DEBUG=microservices:*
SHOW_STACK_TRACE=true

# Immagini gestite via URL - nessun upload file necessario
